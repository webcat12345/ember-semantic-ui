{{#bootstrap-popover title="Impact Details"
linktext=(number-fmt 'changepercunit' point.facet.impactperc)}}
    <table class="table table-striped table-in-popover">
        <thead>
        <tr>
            <th></th>
            <th>
              {{#if model.results.apt.bucket.[0].value }}
                {{#if model.results.apt.bucket.[1] }}
                  {{#each model.results.apt.bucket as |one_value|}}
                    {{one_value.name}}{{one_value.op}}{{one_value.value}}
                      <br>
                  {{/each}}
                {{else}}
                  {{#if model.results.apt.bucket.[0] }}
                    {{model.results.apt.bucket.[0].value}}
                  {{/if}}
                {{/if}}
              {{else}}
                {{model.results.apt.bucket}}
              {{/if}}
            </th>
            <th>
              {{#if model.results.bpt.bucket.[0].value }}
                {{#if model.results.bpt.bucket.[1] }}
                  {{#each model.results.bpt.bucket as |one_value|}}
                    {{one_value.name}}{{one_value.op}}{{one_value.value}}
                      <br>
                  {{/each}}
                {{else}}
                  {{#if model.results.bpt.bucket.[0] }}
                    {{model.results.bpt.bucket.[0].value}}
                  {{/if}}
                {{/if}}
              {{else}}
                {{model.results.bpt.bucket}}
              {{/if}}
            </th>
            <th>Difference</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Impact</td>
            <td>{{number-fmt 'perc' point.facet.facet_data.a.impact}}{{model.metric.unit_type}}
            </td>
            <td>{{number-fmt 'perc' point.facet.facet_data.b.impact}}{{model.metric.unit_type}}
            </td>
            <td class={{point.impactcolor}}>
              {{number-fmt 'changeperc' point.facet.impact}}{{model.metric.unit_type}} <br>
                <b>{{number-fmt 'changeperc' point.facet.impactperc}}%</b> of overall
            </td>
        </tr>
        {{#if model.metric.calculation.numerator}}
            <tr>
                <td>
                    Segment {{model.metric.calculation.numerator.name}}</td>
                <td>{{number-fmt 'metric' point.facet.facet_data.a.mct}}{{model.metric.calculation.numerator.unit_type}}</td>
                <td>{{number-fmt 'metric' point.facet.facet_data.b.mct}}{{model.metric.calculation.numerator.unit_type}}</td>
                <td>
                </td>
            </tr>
            <tr>
                <td>
                    Overall {{model.metric.calculation.denominator.name}}</td>
                <td>{{number-fmt 'metric' point.facet.facet_data.a.parent.ct}}{{model.metric.calculation.denominator.unit_type}}</td>
                <td>{{number-fmt 'metric' point.facet.facet_data.b.parent.ct}}{{model.metric.calculation.denominator.unit_type}}</td>
                <td>
                </td>
            </tr>
        {{/if}}
        </tbody>
    </table>
{{/bootstrap-popover}}
