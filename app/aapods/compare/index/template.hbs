<div class="row text-center">
  <h2>Configured Explains</h2>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      {{#if model}}
      <div class="list-group">
        {{#each model as |s|}}
          {{#link-to 'compare.why' s.id class="list-group-item"}}
            <h4 class="list-group-item-heading">{{s.metric.name}}</h4>
            <p class="list-group-item-text">By {{s.factor.name}}</p>
          {{/link-to}}
        {{/each}}
      </div>
      {{else}}
        None Configured Yet
      {{/if}}
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">
    {{#link-to "compare.create" class="btn btn-default"}}Configure New Why?{{/link-to}}
  </div>
</div>