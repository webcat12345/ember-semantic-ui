<div class="row text-center">
  <h3>Identify Metrics and Dimensions in your Data</h3>
</div>
<div class="row space-box">
    <div class="checkbox-inline">
        <label>
            {{input type="checkbox" name="confirmedSaveAll" checked=confirmedSaveAll}}
            I have gone through all the columns carefully.
        </label>
    </div>
    <button class="btn btn-default {{unless confirmedSaveAll "disabled"}}" {{action 'saveAll'}}>{{saveText}}</button>
</div>
<div class="row">
    <table class="table">
        <thead>
          <tr>
              <th>Column Name</th>
              <th>Sample Data</th>
              <th>Column Type</th>
              <th>Saved</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.columns as |col|}}
            <tr>
                <td>{{col.name}}</td>
                <td><a href="" {{action 'showModal' 'value-list' col}}>Sample Data</a></td>
                <td>
                    <label class="radio-inline">
                        <input type="radio"
                               name="{{col.name}}"
                               id="{{col.name}}metric"
                               value="Metric" checked={{col.isMetric}} {{action 'changeType' col 'Metric' preventDefault=false}}>
                        Metric
                    </label>
                    <label class="radio-inline">
                        <input type="radio"
                               name="{{col.name}}"
                               id="{{col.name}}dim"
                               value="Dimension" checked={{col.isDimension}} {{action 'changeType' col 'Dimension' preventDefault=false}}>
                        Dimension
                    </label>
                </td>
                <td>
                    {{#if col.factor.id}}
                      Saved.
                      {{#if col.isMetric}}
                        {{#link-to 'factors.metric' col.factor.id}}Edit {{col.factor.name}}{{/link-to}}
                      {{else}}
                        {{#link-to 'factors.dimension' col.factor.id}}Edit  {{col.factor.name}}{{/link-to}}
                      {{/if}}
                    {{else}}
                      <button class="btn btn-default" {{action 'saveColumn' col}}>{{col.saveText}}</button>
                    {{/if}}
                </td>
            </tr>
          {{/each}}
        </tbody>
    </table>
</div>
<div class="row space-box">
    <div class="checkbox-inline">
        <label>
          {{input type="checkbox" name="confirmedSaveAll" checked=confirmedSaveAll}}
            I have gone through all the columns carefully.
        </label>
    </div>
    <button class="btn btn-default {{unless confirmedSaveAll "disabled"}}" {{action 'saveAll'}}>{{saveText}}</button>
</div>